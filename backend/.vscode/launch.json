{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pulsefolio API Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/pulsefolio/backend/Pulsefolio.API/bin/Debug/net8.0/Pulsefolio.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/pulsefolio/backend/Pulsefolio.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
